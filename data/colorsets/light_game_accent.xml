<theme>

    <formatVersion>4</formatVersion>
	<include>./common.xml</include>
	<include>./../../$system/color_accent.xml</include>	
	
	<feature supported="carousel">
  
		<view name="system">

			<image name="background" extra="true" />
		
			<image name="system_carousel_background" extra="true">
				<color>ffffff</color>
			</image>

			<text name="systemInfo">
				<color>ffffff</color>
			</text>

		</view>

	</feature>
	
	<view name="basic, detailed">
	
		<image name="gamelist_background" extra="true">
			<color>ffffff</color>
		</image>
	
		<textlist name="gamelist">
			<selectedColor>ffffff</selectedColor>
			<primaryColor>222222</primaryColor>
			<secondaryColor>222222</secondaryColor>
		</textlist>
		
		<image name="gamelist_border" extra="true" />

	</view>
	
</theme>
