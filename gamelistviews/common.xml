<theme>

	<formatVersion>4</formatVersion>
	<include>./../systems/$system/game_theme_gamelist.xml</include>	

	<view name="detailed">

		<image name="background_right" extra="true">
			<maxSize>2 1</maxSize>
			<pos>1 0</pos>
			<origin>1 0</origin>
			<zIndex>0</zIndex>
		</image>

		<image name="logo">
			<path>./../systems/$system/logo_right.svg</path>
			<pos>.985 .98</pos>
			<maxSize>.4 1</maxSize>
			<origin>1 1</origin>
			<zIndex>5</zIndex>
		</image> 
		<image name="logo" region="eu">
			<path>./../systems/$system/eu/logo_right.svg</path>
		</image> 
		<image name="logo" region="us">
			<path>./../systems/$system/us/logo_right.svg</path>
		</image> 
		<image name="logo" region="jp">
			<path>./../systems/$system/jp/logo_right.svg</path>
		</image>

		<image name="controller" extra="true">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/controller.svg</path>
			<pos>.985 .88</pos>
			<origin>1 1</origin>
			<maxSize>.11 .22</maxSize>
			<zIndex>6</zIndex>
		</image>
		<image name="controller" extra="true" region="eu">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/eu/controller.svg</path>
		</image>
		<image name="controller" extra="true" region="jp">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/jp/controller.svg</path>
		</image>
		<image name="controller" extra="true" region="us">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/us/controller.svg</path>
		</image>

		<image name="gamelist_background" extra="true">
			<path>./../assets/gamelist_background.png</path>
			<pos>1 0</pos>
			<origin>1 0</origin>
			<maxSize>2 1</maxSize>
			<zIndex>10</zIndex>
		</image>

		<textlist name="gamelist">
			<pos>.64 0</pos> 
			<size>.48 1</size>
			<alignment>left</alignment>
			<horizontalMargin>.12</horizontalMargin>
			<selectorImagePath>./../assets/gamelist_textlist_selector_background.png</selectorImagePath>
			<fontSize>.028</fontSize>
			<fontPath>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			<zIndex>20</zIndex>
		</textlist>

		<image name="background" extra="true">
			<pos>.75 0</pos>
			<origin>1 0</origin>
			<maxSize>2 1</maxSize>
			<zIndex>30</zIndex>
		</image>

		<image name="gamelist_border" extra="true">
			<path>./../assets/gamelist_border.png</path>
			<origin>1 0 </origin>
			<pos>.752 0</pos>
			<maxSize>2 1</maxSize>
			<zIndex>40</zIndex>
		</image>

		<text name="md_folder_name">
			<forceUppercase>1</forceUppercase>
			<fontPath>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			<fontSize>.03</fontSize>
			<size>0 0</size>
			<pos>.37 .9</pos>
			<origin>.5 1</origin>
			<alignment>center</alignment>
			<zIndex>45</zIndex>
		</text>
		
		<image name="md_image">
			<origin>.5 .5</origin>
			<zIndex>70</zIndex>
		</image>

		<video name="md_video">
			<origin>.5 .5</origin>
			<zIndex>71</zIndex>
		</video>

		<rating name="md_rating">
			<filledPath>./../assets/icon_filled.svg</filledPath>
			<unfilledPath>./../assets/icon_empty.svg</unfilledPath>
		</rating>

		<text name="md_lbl_rating, md_lbl_releasedate, md_lbl_publisher, md_lbl_developer, md_lbl_genre, md_lbl_players, md_lbl_lastplayed, md_lbl_playcount, md_lbl_favorite">
			<pos>2 2</pos>
		</text>

		<text name="md_rating, md_publisher, md_developer, md_genre, md_players, md_playcount, md_favorite, md_description">
			<pos>2 2</pos>
			<fontPath>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			<fontSize>.027</fontSize>
		</text>

		<datetime name="md_releasedate, md_lastplayed">
			<pos>2 2</pos>
			<fontPath>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			<fontSize>.027</fontSize>
		</datetime>

		<image name="md_folder_image_0, md_folder_image_1, md_folder_image_2, md_folder_image_3, md_folder_image_4, md_folder_image_5, md_folder_image_6, md_folder_image_7, md_folder_image_8">
			<maxSize>.2 .2</maxSize>
			<zIndex>45</zIndex>
			<origin>.5 .5</origin>
		</image>

		<image name="md_folder_image_0">
			<pos>.2 .2</pos>
		</image>
		<image name="md_folder_image_1">
			<pos>.37 .2</pos>
		</image>
		<image name="md_folder_image_2">
			<pos>.54 .2</pos>
		</image>
		<image name="md_folder_image_3">
			<pos>.2 .45</pos>
		</image>
		<image name="md_folder_image_4">
			<pos>.37 .45</pos>
		</image>
		<image name="md_folder_image_5">
			<pos>.54 .45</pos>
		</image>
		<image name="md_folder_image_6">
			<pos>.2 .7</pos>
		</image>
		<image name="md_folder_image_7">
			<pos>.37 .7</pos>
		</image>
		<image name="md_folder_image_8">
			<pos>.54 .7</pos>
		</image>

	</view>

</theme>
