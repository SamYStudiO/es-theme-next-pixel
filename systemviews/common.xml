<theme>

	<formatVersion>4</formatVersion>
	<include>./../systems/$system/game_theme_music.xml</include>

	<feature supported="carousel">

		<view name="system">

			<image name="system_carousel_background" extra="true" />

			<carousel name="systemcarousel">
				<logoScale>2</logoScale>
				<logoSize>1 .05</logoSize>
				<color>ffffff00</color>
			</carousel>

			<image name="system_carousel_border" extra="true">
				<path>./../assets/white.png</path>
			</image>

			<text name="systemInfo">
				<origin>.5 .5</origin>
				<alignment>center</alignment>
			</text>

		</view>

	</feature>

	<view name="system">

		<image name="background" extra="true">
			<pos>.5 .5</pos>
			<origin>.5 .5</origin>
			<maxSize>2 1</maxSize>
		</image>

		<text name="info1, info2, info3, info4, info5, info6, info7, info8, info9, info10, info11, info12" extra="true">
			<pos>2 2</pos>
		</text>

		<image name="logo">
			<path>./../systems/$system/logo.svg</path>
		</image> 
		<image name="logo" region="eu">
			<path>./../systems/$system/eu/logo.svg</path>
		</image> 
		<image name="logo" region="us">
			<path>./../systems/$system/us/logo.svg</path>
		</image> 
		<image name="logo" region="jp">
			<path>./../systems/$system/jp/logo.svg</path>
		</image>

		<image name="console" extra="true">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/console.svg</path>
		</image>
		<image name="console" extra="true" region="eu">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/eu/console.svg</path>
		</image>
		<image name="console" extra="true" region="jp">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/jp/console.svg</path>
		</image>
		<image name="console" extra="true" region="us">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/$system/data/us/console.svg</path>
		</image>

	</view>

</theme>