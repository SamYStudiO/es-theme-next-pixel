<theme>

	<formatVersion>4</formatVersion>	
	<include>./common.xml</include>
	<include>./../systems/$system/custom_vertical_wheel.xml</include>
	<include>./../../$system/game_theme_vertical_wheel.xml</include>
	<include>./../../$system/game_theme_music.xml</include>

	<feature supported="carousel">

		<view name="system">

			<image name="system_carousel_background" extra="true">
				<origin>1 .5</origin>
				<pos>1 .5</pos>
				<maxSize>2 1</maxSize>
				<path>./../arts/system_carousel_vertical_wheel_background.png</path>
			</image>

			<carousel name="systemcarousel">
				<type>vertical_wheel</type>
				<pos>.9 .5</pos>
				<origin>1 .5</origin>
				<size>1 1</size>
				<logoRotation>-10</logoRotation>
				<logoRotationOrigin>2.8 .5</logoRotationOrigin>
				<maxLogoCount>7</maxLogoCount>
				<logoAlignment>right</logoAlignment>
				<defaultTransition>instant</defaultTransition>
			</carousel>

			<image name="system_carousel_border" extra="true">
				<origin>1 .5</origin>
				<maxSize>2 1</maxSize>
				<pos>.999 .5</pos>
				<path>./../arts/system_carousel_vertical_wheel_border.png</path>
			</image>

			<image name="system_count_background" extra="true">
				<pos>.91 .57</pos>
				<origin>.5 0</origin>
				<size>.2 .03</size>
				<path>./../arts/system_info_gradient_background.png</path>
			</image>

			<text name="systemInfo">
				<pos>.91 .585</pos>
				<size>.16 .01</size>
				<color>ffffff</color>
				<fontSize>.021</fontSize>
				<fontPath>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/data/arts/Exo2-SemiBoldCondensed.otf</fontPath>
			</text>

		</view>

	</feature>

	<view name="system">

		<image name="background" extra="true">
			<origin>1 .5</origin>
			<pos>1 .5</pos>
		</image>
		
		<image name="logo">
			<path>./../systems/$system/logo_right.svg</path>
		</image> 
		<image name="logo" region="eu">
			<path>./../systems/$system/eu/logo_right.svg</path>
		</image> 
		<image name="logo" region="us">
			<path>./../systems/$system/us/logo_right.svg</path>
		</image> 
		<image name="logo" region="jp">
			<path>./../systems/$system/jp/logo_right.svg</path>
		</image>

		<image name="console" extra="true">
			<pos>.91 .55</pos>
			<maxSize>.15 .24</maxSize>
			<origin>.5 1</origin>
		</image>

	</view>

</theme>