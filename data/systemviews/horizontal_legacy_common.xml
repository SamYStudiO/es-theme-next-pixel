<theme>

	<formatVersion>4</formatVersion>	
	
	<feature supported="carousel">
  
		<view name="system">
		
			<image name="system_carousel_background" extra="true">
				<pos>0 .405</pos>
				<size>1 .184</size>
				<path>./../arts/back60.png</path>
			</image>
		
			<carousel name="systemcarousel">
				<pos>0 .405</pos>
				<size>1 .185</size>
				<logoScale>2</logoScale>
				<logoSize>1 .05</logoSize>
				<color>ffffff00</color>
			</carousel>
			
			<image name="systemInfoBack" extra="true">
				<size>1 .05</size>
				<pos>0 .590</pos>
				<path>./../arts/band.png</path>
			</image>

			<text name="systemInfo">
				<origin>.5 1</origin>
				<pos>.5 .64</pos>
			</text>

		</view>

	</feature>
	
	<view name="system">
		
		<image name="background" extra="true">
			<pos>.5 .5</pos>
			<origin>.5 .5</origin>
			<maxSize>2 1</maxSize>
			<path>./../../$system/background_legacy.jpg</path>
		</image>
		
		<image name="logo">
			<path>./../../$system/data/logo.svg</path>
		</image> 
		<image name="logo" region="eu">
			<path>./../../$system/data/eu/logo.svg</path>
		</image> 
		<image name="logo" region="us">
			<path>./../../$system/data/us/logo.svg</path>
		</image> 
		<image name="logo" region="jp">
			<path>./../../$system/data/jp/logo.svg</path>
		</image>
		
		<image name="console" extra="true">
			<pos>.98 .82</pos>
			<maxSize>.20 .20</maxSize>
			<origin>1 .5</origin>
		</image>
		
	</view>
	
	<view name="basic, detailed">
		
		<image name="logo">
			<path>./../../$system/data/logo_right.svg</path>
		</image> 
		<image name="logo" region="eu">
			<path>./../../$system/data/eu/logo_right.svg</path>
		</image> 
		<image name="logo" region="us">
			<path>./../../$system/data/us/logo_right.svg</path>
		</image> 
		<image name="logo" region="jp">
			<path>./../../$system/data/jp/logo_right.svg</path>
		</image>
		
	</view>
	
</theme>