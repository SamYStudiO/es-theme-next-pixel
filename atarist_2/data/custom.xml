<theme>

	<formatVersion>4</formatVersion>
	
	<view name="system">
	
		<text name="info1" extra="true">
			<text>Manufacturer : Atari Corporation</text>
		</text>
		<text name="info2" extra="true">
			<text>Year of Release : 1985</text>
		</text>
		<text name="info3" extra="true">
			<text>OS : Atari TOS</text>
		</text>
		<text name="info4" extra="true">
			<text>CPU : Motorola 68000 16-/32-bit CPU @ 8 MHz</text>
		</text>
		<text name="info5" extra="true">
			<text>RAM : 512KB or 1MB</text>
		</text>
		<text name="info6" extra="true">
			<text>Drive : Single-sided 3½" floppy disk drive</text>
		</text>
		<text name="info7" extra="true">
			<text>Sound Chip : Yamaha YM2149 3-voice squarewave</text>
		</text>
		<text name="info8" extra="true">
			<text>Display modes :</text>
		</text>
		<text name="info9" extra="true">
			<text>Low resolution: 320 × 200 (16 color), palette of 512 colors</text>
		</text>
		<text name="info10" extra="true">
			<text>Medium resolution: 640 × 200 (4 color), palette of 512 colors</text>
		</text>
		
		<!-- for testing removed for release -->
		<image name="console" extra="true">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/atarist/data/console.svg</path>
		</image>
		<image name="console" extra="true" region="eu">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/atarist/data/eu/console.svg</path>
		</image>
		<image name="console" extra="true" region="jp">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/atarist/data/jp/console.svg</path>
		</image>
		<image name="console" extra="true" region="us">
			<path>/recalbox/share_init/system/.emulationstation/themes/recalbox-next/atarist/data/us/console.svg</path>
		</image>
		
	</view>
	
	<view name="basic, detailed">
	
		<image name="controller" extra="true">
			<pos>.93 .88</pos>
		</image>
		
	</view>
	
	<view name="basic">
	
