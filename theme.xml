<theme>

	<formatVersion>4</formatVersion>
	<include>./data/config.xml</include>
	<include>./$system/data/custom.xml</include>
	
	<view name="system">
	
		<!-- default music when system music is missing -->
		<sound name="directory">
			<path>./music</path>
		</sound>
		
		<!-- system music -->
		<sound name="bgsound">
			<path>./$system/music.ogg</path>
	    </sound>
		
	</view>
	
	<view name="menu, system">
	
		<helpsystem name="help">
			<fontPath>./data/arts/steelfishrg.ttf</fontPath>
			<fontSize>.035</fontSize>
		</helpsystem>
		
	</view>
	
	<view name="basic, detailed">
	
		<helpsystem name="help">
			<fontPath>./data/arts/steelfishrg.ttf</fontPath>
			<fontSize>.032</fontSize>
		</helpsystem>
		
	</view>
	
</theme>
